.SUFFIXES: .plm .pl3
.plm.obj:
	@SET ISIS_F0=$(F0)
	@SET ISIS_F1=$(V4)
	$(ISIS) :F1:PLM80 $< code optimize SYMBOLS DEBUG
	@if not exist $*.obj exit /b 1

