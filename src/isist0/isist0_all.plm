DECLARE recal$pb STRUCTURE(
		iocw BYTE,
		ioins BYTE,
		nsec BYTE,
		tadr BYTE,
		sadr BYTE) INITIAL(80h, 3, 1, 0, 0);
DECLARE user$status ADDRESS JUNK2020;
DECLARE pc$p ADDRESS JUNK2035, pc BASED pc$p ADDRESS;
DECLARE start$addr ADDRESS JUNK2020;
DECLARE temp BYTE JUNK20,
	padding ADDRESS JUNK2020;

DECLARE disk$error$type ADDRESS JUNK2020;
DECLARE	hdr$blk ADDRESS JUNK2020;
DECLARE	i BYTE JUNK20;
DECLARE stat BYTE JUNK20;

DECLARE config$table(60) BYTE	/* main config table shared with isis.bin */
$IF JUNKFILL
	INITIAL	/* junk initialisation to match t0boot.bin file */
	    (20h, 20h, 44h, 4Fh, 3Bh, 0Dh, 0Ah, 20h, 31h, 36h,
