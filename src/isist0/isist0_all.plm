DECLARE sys$flg BYTE AT (0ffffh);	/* 1 for INTELLEC, 0 for MDS */
DECLARE readDCB	STRUCTURE(
		iocw BYTE,	/* channel word */
		ioins BYTE,	/* instruction */
		nsec BYTE,	/* number of sectors */
