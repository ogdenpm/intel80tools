	     20h, 50h, 41h, 52h, 41h, 4Dh, 53h, 28h, 49h, 29h,
	     2Eh, 44h, 41h, 54h, 28h, 4Ch, 29h, 20h, 3Dh, 20h,
	     43h, 48h, 41h, 52h, 3Bh, 0Dh, 0Ah, 20h, 31h, 36h),
