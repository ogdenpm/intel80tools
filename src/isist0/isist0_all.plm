	@SET ISIS_F1=$(V4)
	$(ISIS) :F1:ASM80 $(<:../common/=:F3:) 
	@find $*.lst "ASSEMBLY COMPLETE,   NO ERRORS" >nul || (del $*.obj & exit /b 1)

$(TARGET): $(OBJ)
	@SET ISIS_F0=$(F0)
	@SET ISIS_F1=$(V4)
	echo $(**: =,)
	$(ISIS) :F1:link "&" < <<
$(**: =,&
),:f1:plm80.lib to $*.rel
<<NOKEEP
	@if not exist $*.rel exit /b 1
	$(ISIS) :F1:locate $*.rel to $*.bin name($(NAME)) STACKSIZE($(STACK)) CODE(3000h)  map PUBLICS SYMBOLS print(isist0.map)
	@echo ##################################################################
	@echo #### Memory overlaps 3A81H-3AAAH and 3B6AH-3B7FH are expected ####
	@echo ##################################################################
	del $*.rel
	@if not exist $*.bin exit /b 1
	obj2bin $*.bin $(TARGET)

