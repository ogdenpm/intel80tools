	MOV H,A
	ANA A ; SHIFT DE LEFT
	MOV A,E
	RAL
	MOV E,A
	MOV A,D
	RAL
	MOV D,A
	JMP LOOP1
LOOP2:  ANA A ; SHIFT HL RIGHT
	MOV A,H
	RAR
	MOV H,A
	MOV A,L
	RAR
	MOV L,A
	JC RETURN ; IF HL = 0 RETURN
	ANA A ; SHIFT DE RIGHT
	MOV A,D
	RAR
	MOV D,A
	MOV A,E
	RAR
	MOV E,A
	MOV A,D ; IF DE <= BC
	CMP B
	JZ DIV3
	JNC LOOP2
	JMP DIV2
DIV3:	MOV A,C
	CMP E
	JC LOOP2
DIV2:   MOV A,C ; BC := BC - DE
