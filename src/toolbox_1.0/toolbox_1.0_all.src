		end;
	end;
	else
		call setblock(1ah);
	call setblock(binHdrBlk);
	call absio(6, disk, 202h, .bitmap);
	call absio(6, disk, 203h, .bitmap +  80h);
	if disk < 4 then
	do;
		call absio(6, disk, 204h, .bitmap + 100h);
		call absio(6, disk, 205h, .bitmap + 180h);
	end;
end;
