	rc
	call	DDIGCH
	rc
	sub	a
	ret

TOKNCH:	call	LTNMCH
	rc
	mov	a,b
	cpi	'?'
	jz	ANYCH
	cpi	'@'
	jz	ANYCH
	cpi	'_'
	jz	ANYCH
	sub	a
	ret

