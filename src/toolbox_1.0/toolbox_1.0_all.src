DECLARE (ACTUAL, STATUS) ADDRESS;
DECLARE (DISK, DISK$LAST$READ, FROM$DISK, TO$DISK, MARK$DISK) BYTE;
DECLARE (I, BLOCK, TRACK, SECTOR, TRACK$LAST$READ, SECTOR$LAST$READ,
  MARK$TRACK, MARK$SECTOR) ADDRESS;
