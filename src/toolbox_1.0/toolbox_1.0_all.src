	rc
	call	FORCUP
	cpi	'A'
	jc	RETZ
	cpi	'F' + 1
	jc	ANYCH

RETZ:	sub	a
	ret

LETRCH:	call	FORCUP
	cpi	'A'
	jc	RETZ
	cpi	'Z' + 1
	jc	ANYCH
	sub	a
	ret

