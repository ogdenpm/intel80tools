/*******  EXTERNALS *******/

/* FNAMES.LIB */

out$file$name: PROCEDURE (ptr) EXTERNAL; DECLARE ptr ADDRESS; END;

/*  UTIL.LIB  */

DECLARE obuf$p ADDRESS EXTERNAL;
DECLARE scan$p ADDRESS EXTERNAL;
blnkch: PROCEDURE BYTE EXTERNAL; END;
