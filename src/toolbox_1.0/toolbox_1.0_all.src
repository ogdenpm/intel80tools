OUTDEC: procedure(ZZ1) external; declare (ZZ1) address; end;
OUTPRINT: procedure(ZZ1) external; declare (ZZ1) address; end;
OUTWRITE: procedure(ZZ1,ZZ2) external; declare (ZZ1) address, (ZZ2) byte; end;
