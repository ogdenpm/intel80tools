OUTDECR: PROCEDURE(N, WIDTH) PUBLIC;
	DECLARE N ADDRESS, WIDTH BYTE;
	DECLARE CHP ADDRESS, NDIGIT BYTE,
		CH BASED CHP BYTE;

	if (NDIGIT := DECSIZ(N)) < WIDTH THEN
		CALL OUTCHARS(WIDTH - NDIGIT, LEADCHAR);
	
	CHP = OBUFP + NDIGIT;
	DO WHILE CHP > OBUFP;
		CHP = CHP - 1;
		CH = '0' + N mod 10;
		N = N / 10;
	END;	
	OBUFP = OBUFP + NDIGIT;
END;
