/* GENERATE PHYSICAL SECTOR TABLE FOR INTERLEAVE FACTOR */

GENSEC:
  PROCEDURE(INTLEAVE,NRSEC);
    DECLARE INTLEAVE BYTE;
    DECLARE NRSEC BYTE;
    DECLARE I BYTE;
    DECLARE INDEX BYTE;

    DO I = 0 TO NRSEC-1;
      SECTAB(I) = 0;
    END;
    INDEX = 0;
    DO I= 1 TO NRSEC;
      IF INDEX >= NRSEC THEN
      DO;
        INDEX = INDEX - NRSEC;
        DO WHILE SECTAB(INDEX) <> 0;
          INDEX = INDEX + 1;
        END;
      END;
      SECTAB(INDEX) = I;
      INDEX = INDEX + INTLEAVE;
    END;
  END GENSEC;

