FILL: procedure(ZZ1,ZZ2,ZZ3) external; declare (ZZ1,ZZ2) address, (ZZ3) byte; end;
FMOVE: procedure(ZZ1,ZZ2,ZZ3) external; declare (ZZ1,ZZ2,ZZ3) address; end;
