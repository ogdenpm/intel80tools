	cpi	'0'
	jc	RETZ
	cpi	'9' + 1
	jnc	RETZ

ANYCH:	stc
	sbb	a
	ret

FORCUP:	call	NXTCH
	cpi	'a'
	rc
	cpi	'z' + 1
	rnc
	sui	20H
	ret

