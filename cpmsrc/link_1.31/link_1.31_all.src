YRewind: procedure public;
    call WriteYByte(0ffh);
    if yFile.wr then
    do;
        do while yFile.bufIdx <> 0;
            call WriteYByte(1ah);
        end;
        call CloseF(.yFile.fcb);
        call OpenF(.yFile.fcb);
        yFile.bufIdx = yFile.len;
    end;
    else
        yFile.bufIdx = 0FFFFh;
end;

