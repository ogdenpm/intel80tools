    curAddr = loadAddress;
    if b3A5C then
    do;
        call WriteByteWithUpdate(0c3h);
        call WriteWordWithUpdate(w3A56);
    end;

    starts(ABSOLUTE) = w3A58;
    do i = 0 to b3A9D - 1;
        if starts(objTable(i)) >= loadAddress then
